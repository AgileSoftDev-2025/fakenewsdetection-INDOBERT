{
  "name": "fnd-cucumber-tests",
  "version": "1.0.0",
  "description": "Cucumber BDD tests for Fake News Detection Frontend",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --config=cucumber.js",
    "test:bdd": "cucumber-js --config=cucumber.js",
    "test:verbose": "cucumber-js --config=cucumber.js --format progress",
    "test:html": "cucumber-js --config=cucumber.js --format html:reports/cucumber-report.html",
    "test:json": "cucumber-js --config=cucumber.js --format json:reports/cucumber-report.json",
    "test:dry": "cucumber-js --config=cucumber.js --dry-run",
    "test:tags": "cucumber-js --config=cucumber.js --tags @smoke",
    "clean:reports": "rm -rf reports/*",
    "pretest": "npm run clean:reports"
  },
  "keywords": [
    "cucumber",
    "bdd",
    "testing",
    "fake-news",
    "detection"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "puppeteer": "^21.0.0",
    "chai": "^4.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "cucumber": {
    "require": [
      "features/step-definitions/**/*.js"
    ]
  }
}